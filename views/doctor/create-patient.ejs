<%- include('./partials/header') %>
  <div class="pcoded-main-container">
    <div class="pcoded-content">
      <div class="page-header">
        <div class="page-block">
          <div class="row align-items-center">
            <div class="col-md-12">
              <div class="page-header-title">
                <h5 class="m-b-10">Tạo hồ sơ bệnh nhân</h5>
              </div>
              <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="/doctor"><i class="feather icon-home"></i></a></li>
                <li class="breadcrumb-item"><a>Hồ sơ bệnh nhân</a></li>
                <li class="breadcrumb-item"><a>Tạo hồ sơ bệnh nhân</a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <div class="card">
            <div class="card-body">
              <form method="POST" action="/doctor/patients/create">
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label>Họ và tên <span class="text-danger">*</span></label>
                      <input type="text" class="form-control" name="fullname" value="<%= oldData.fullname || '' %>">
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label>Email</label>
                      <input type="email" class="form-control" name="email" value="<%= oldData.email || '' %>">
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label>Ngày sinh <span class="text-danger">*</span></label>
                      <input type="date" class="form-control" name="birthday" value="<%= oldData.birthday || '' %>">
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label>Số điện thoại <span class="text-danger">*</span></label>
                      <input type="text" class="form-control" name="phone" value="<%= oldData.phone || '' %>">
                    </div>
                  </div>
                  <div class="col-md-12">
                    <div class="form-group">
                      <label>CMND/CCCD</label>
                      <input type="text" class="form-control" name="identificationNumber" value="<%= oldData.identificationNumber || '' %>">
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="form-group">
                      <label>Địa chỉ <span class="text-danger">*</span></label>
                      <input type="text" class="form-control" name="address" value="<%= oldData.address || '' %>">
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label>Nhóm máu</label>
                      <select name="bloodType" class="form-control">
                        <option value="" <% if (oldData.bloodType === '') { %>selected<% } %>>--Chọn nhóm máu--</option>
                        <option value="A+" <% if (oldData.bloodType === 'A+') { %>selected<% } %>>A+</option>
                        <option value="A-" <% if (oldData.bloodType === 'A-') { %>selected<% } %>>A-</option>
                        <option value="B+" <% if (oldData.bloodType === 'B+') { %>selected<% } %>>B+</option>
                        <option value="B-" <% if (oldData.bloodType === 'B-') { %>selected<% } %>>B-</option>
                        <option value="O+" <% if (oldData.bloodType === 'O+') { %>selected<% } %>>O+</option>
                        <option value="O-" <% if (oldData.bloodType === 'O-') { %>selected<% } %>>O-</option>
                        <option value="AB+" <% if (oldData.bloodType === 'AB+') { %>selected<% } %>>AB+</option>
                        <option value="AB-" <% if (oldData.bloodType === 'AB-') { %>selected<% } %>>AB-</option>
                        <option value="Không biết" <% if (oldData.bloodType === 'Không biết') { %>selected<% } %>>Không biết</option>
                      </select>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label>Bệnh mãn tính</label>
                      <input type="text" class="form-control" name="chronicDiseases" value="<%= oldData.chronicDiseases || '' %>">
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label>Dị ứng</label>
                      <input type="text" class="form-control" name="allergies" value="<%= oldData.allergies || '' %>">
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label>Tên người bảo hộ</label>
                      <input type="text" class="form-control" name="guardianName" value="<%= oldData.guardianName || '' %>">
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label>SĐT người bảo hộ</label>
                      <input type="text" class="form-control" name="guardianPhone" value="<%= oldData.guardianPhone || '' %>">
                    </div>
                  </div>
                  <div class="col-md-12">
                    <div class="form-group">
                      <label>CMND/CCCD người bảo hộ</label>
                      <input type="text" class="form-control" name="guardianIDNumber" value="<%= oldData.guardianIDNumber || '' %>">
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label>Giới tính <span class="text-danger">*</span></label>
                      <select name="gender" class="form-control" required>
                        <option value="" <% if (!oldData.gender) { %>selected<% } %>>--Chọn giới tính--</option>
                        <option value="Nam" <% if (oldData.gender === 'Nam') { %>selected<% } %>>Nam</option>
                        <option value="Nữ" <% if (oldData.gender === 'Nữ') { %>selected<% } %>>Nữ</option>
                        <option value="Khác" <% if (oldData.gender === 'Khác') { %>selected<% } %>>Khác</option>
                        </select>
                    </div>
                  </div>
                </div>
                <button type="submit" class="btn btn-primary">Tạo hồ sơ</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('./partials/footer'); -%>
