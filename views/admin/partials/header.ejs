<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= typeof title !== 'undefined' ? title : 'Trang Administrator' %></title>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui"
    />
    <link
      rel="stylesheet"
      href="/assets/vendors/iconfonts/mdi/css/materialdesignicons.css"
    />
    <link rel="stylesheet" href="/assets/vendors/css/vendor.addons.css" />
    <link rel="stylesheet" href="/assets/css/shared/style.css" />
    <link rel="stylesheet" href="/assets/css/demo_1/style.css" />
    <!-- Favicon icon -->
    <link rel="icon" href="/assets/images/logo_mini.png" />
    <!-- vendor css -->
    <link rel="stylesheet" href="/bootstrap/css/style.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css"
    />
  </head>
  <body class="">
    <div class="loader-bg">
      <div class="loader-track">
        <div class="loader-fill"></div>
      </div>
    </div>
    <%- include('../partials/sidebar'); -%>
    <header
      class="navbar pcoded-header navbar-expand-lg navbar-light header-dark"
    >
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ml-auto">
          <li>
            <div class="dropdown drp-user">
              <a class="dropdown-toggle" data-toggle="dropdown">
                <i class="feather icon-user"></i>
              </a>
              <div
                class="dropdown-menu dropdown-menu-right profile-notification"
              >
                <div class="pro-head">
                  <span><%= user.fullname%></span>
                  <a href="/auth/logout" class="dud-logout" title="Logout">
                    <i class="feather icon-log-out"></i>
                  </a>
                </div>
              </div>
            </div>
          </li>
        </ul>
      </div>
    </header>
    <!-- [ Header ] end -->
     <script src="/assets/js/account-change.js"></script>
    <script>
      const clientUser = <%- JSON.stringify(user || null) %>;

      const hasWallet = clientUser && clientUser.walletAddress;

      if (hasWallet) {
        // console.log("Header: user có ví liên kết");
        listenForAccountChange('<%= user.walletAddress %>');
      } //else {
      //   console.log("Header: user không có ví liên kết");
      // }
    </script>
  </body>
</html>
