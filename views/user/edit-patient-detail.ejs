<%- include('./partials/header') %>
<div class="pcoded-main-container">
  <div class="pcoded-content">
    <div class="page-header">
      <div class="page-block">
        <div class="row align-items-center">
          <div class="col-md-12">
            <div class="page-header-title">
              <h5 class="m-b-10">Chỉnh sửa thông tin bệnh nhân</h5>
            </div>
            <ul class="breadcrumb">
              <li class="breadcrumb-item">
                <a href="/"><i class="feather icon-home"></i></a>
              </li>
              <li class="breadcrumb-item">
                <a href="/medical-history">Hồ sơ bệnh án của tôi</a>
              </li>
              <li class="breadcrumb-item"><a>Chỉnh sửa thông tin</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <div class="card">
          <div class="card-body">
            <form method="POST" action="/medical-history/edit">
              <div class="row">
                <!-- Những field có thể chỉnh sửa -->
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Email</label>
                    <input
                      type="email"
                      class="form-control"
                      name="email"
                      value="<%= patient.email || '' %>"
                    />
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Số điện thoại</label>
                    <input
                      type="text"
                      class="form-control"
                      name="phone"
                      value="<%= patient.phone || '' %>"
                    />
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group">
                    <label>Địa chỉ</label>
                    <input
                      type="text"
                      class="form-control"
                      name="address"
                      value="<%= patient.address || '' %>"
                    />
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Dị ứng</label>
                    <input
                      type="text"
                      class="form-control"
                      name="allergies"
                      value="<%= patient.allergies || '' %>"
                    />
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Bệnh mãn tính</label>
                    <input
                      type="text"
                      class="form-control"
                      name="chronicDiseases"
                      value="<%= patient.chronicDiseases || '' %>"
                    />
                  </div>
                </div>

                <div class="col-md-12">
                  <hr />
                  <h6>Thông tin người giám hộ</h6>
                </div>

                <div class="col-md-4">
                  <div class="form-group">
                    <label>Tên người bảo hộ</label>
                    <input
                      type="text"
                      class="form-control"
                      name="guardianName"
                      value="<%= patient.guardianName || '' %>"
                    />
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-group">
                    <label>SĐT người bảo hộ</label>
                    <input
                      type="text"
                      class="form-control"
                      name="guardianPhone"
                      value="<%= patient.guardianPhone || '' %>"
                    />
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-group">
                    <label>CMND/CCCD người bảo hộ</label>
                    <input
                      type="text"
                      class="form-control"
                      name="guardianIDNumber"
                      value="<%= patient.guardianIDNumber || '' %>"
                    />
                  </div>
                </div>
              </div>
              <button type="submit" class="btn btn-primary">
                Lưu thay đổi
              </button>
              <a href="/medical-history" class="btn btn-secondary">Hủy</a>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('./partials/footer'); -%>
