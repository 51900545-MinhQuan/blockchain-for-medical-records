#!/usr/bin/env node

var app = require("../app");
var debug = require("debug")("nodejs:server");
var http = require("http");

/**
 * Nhận port từ biến môi trường
 */

var port = normalizePort(process.env.PORT || "3000");
app.set("port", port);

var server = http.createServer(app);

server.listen(port, () => {
  console.log(`Server đang chạy trên http://localhost:${port}`);
});
server.on("error", onError);

/**
 * Chuẩn hóa biến port
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    return val;
  }

  if (port >= 0) {
    return port;
  }

  return false;
}

function onError(error) {
  if (error.syscall !== "listen") {
    throw error;
  }

  switch (error.code) {
    case "EACCES":
      console.error(
        `Port ${port} cân quyền nâng cao để sử dụng. Vui lòng chạy với quyền quản trị viên.`
      );
      process.exit(1);
      return;
    case "EADDRINUSE":
      console.error(
        `Port ${port} đã được sử dụng. Vui lòng chọn một port khác.`
      );
      process.exit(1);
      return;
    default:
      throw error;
  }
}
